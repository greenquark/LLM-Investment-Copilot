# UX Path A Backend Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Database
DATABASE_URL=sqlite:///./ux_path_a.db

# Security
SECRET_KEY=change-me-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Token Budgets (INV-LLM-03)
MAX_TOKENS_PER_SESSION=100000
MAX_TOKENS_PER_MESSAGE=4000

# CORS Origins (comma-separated, optional - defaults provided)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Cache
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600
